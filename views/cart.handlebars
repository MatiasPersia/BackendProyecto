<h1>Carrito</h1>
<ul>
    {{#each products}}
        <li>
            {{this.productId.title}} - Cantidad: {{this.quantity}}
            <form action="/api/carts/{{../id}}/products/{{this.productId._id}}" method="PUT">
                <input type="number" name="quantity" min="1" value="{{this.quantity}}" required>
                <button type="submit">Actualizar Cantidad</button>
            </form>
            <form action="/api/carts/{{../id}}/products/{{this.productId._id}}" method="DELETE">
                <button type="submit">Eliminar</button>
            </form>
        </li>
    {{/each}}
</ul>
<form action="/api/carts/{{id}}" method="DELETE">
    <button type="submit">Eliminar Todos los Productos</button>
</form>
